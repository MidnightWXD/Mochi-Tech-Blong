<h3>Create New Post</h3>
<form class="form-horizontal post-form">
  <div class="form-group">
    <label class="col-sm-2 control-label">Tille</label>
    <div class="col-sm-10">
      <input type="title" class="form-control" id="post-title">
    </div>
  </div>
  <div class="form-group">
    <label for="content" class="col-sm-2 control-label">Content</label>
    <div class="col-sm-10">
      <input type="content" class="form-control" style="height:200px" id="post-content">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-md-6">
      <button type="submit" class="btn btn-default">Create</button>
    </div>
  </div>
</form>

<script src="./js/post.js"></script>