<h3>Sign Up</h3>
<form class="form-horizontal signup-form">
  <div class="form-group">
    <label class="col-sm-2 control-label">User name</label>
    <div class="col-sm-10">
      <input type="username" class="form-control" id="username-signup" placeholder="Username">
    </div>
  </div>
  <div class="form-group">
    <label for="password-signup" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="password-signup" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <a href="/login">Login</a>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Sign up</button>
    </div>
  </div>
</form>

<script src="./js/signup.js"></script>