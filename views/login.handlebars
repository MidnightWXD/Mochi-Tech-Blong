<h3>Log In</h3>
<form class="form-horizontal login-form">
  <div class="form-group">
    <label class="col-sm-2 control-label">User name</label>
    <div class="col-sm-10">
      <input type="username" class="form-control" id="username-login" placeholder="Username">
    </div>
  </div>
  <div class="form-group">
    <label for="password-login" class="col-sm-2 control-label">Password</label>
    <div class="col-sm-10">
      <input type="password" class="form-control" id="password-login" placeholder="Password">
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <div class="checkbox">
        <a href="/signup">Sign Up</a>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-2 col-sm-10">
      <button type="submit" class="btn btn-default">Sign in</button>
    </div>
  </div>
</form>

<script src="./js/login.js"></script>